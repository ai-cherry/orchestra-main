# Orchestra AI Admin UI pnpm Configuration
# Security and stability settings

# Strict peer dependencies - fail on peer dep issues
strict-peer-dependencies=true

# Auto install peers (helps avoid runtime errors)
auto-install-peers=true

# Disable scripts by default for security
# (can be overridden with --ignore-scripts=false when needed)
ignore-scripts=false

# Use frozen lockfile in CI/production
# frozen-lockfile=true

# Verify store integrity
verify-store-integrity=true

# Shamefully hoist packages (for compatibility with some tools)
shamefully-hoist=false

# Network timeout (milliseconds)
network-timeout=30000

# Retry settings
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Store directory (shared across projects)
store-dir=~/.pnpm-store

# Virtual store directory
virtual-store-dir=node_modules/.pnpm

# Modules directory
modules-dir=node_modules

# Package import method
package-import-method=copy

# Prefer offline mode (use cached packages when available)
prefer-offline=true

# Save exact versions
save-exact=false
save-prefix=^

# Audit level for security checks
audit-level=high

# Engine strict - enforce Node version
engine-strict=true

# Registry
registry=https://registry.npmjs.org/

# Disable update notifier
update-notifier=false 