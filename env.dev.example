# Phase 1: Development Environment Configuration
# This file manages ports and configurations to prevent conflicts

# Port Configuration - Use GLOBAL_PORT_PREFIX to shift all ports if needed
GLOBAL_PORT_PREFIX=90

# Traefik Ports
TRAEFIK_PORT=9080
HTTP_PORT=9000
HTTPS_PORT=9443

# Environment
ENV=development

# Database Configuration
POSTGRES_USER=orchestra
POSTGRES_PASSWORD=orchestrapass
POSTGRES_DB=orchestra

# Redis Configuration
REDIS_PASSWORD=

# Service URLs (internal Docker network)
DATABASE_URL=postgresql://orchestra:orchestrapass@postgres:5432/orchestra
REDIS_URL=redis://redis:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Monitoring
PROMETHEUS_RETENTION=7d
GRAFANA_ADMIN_PASSWORD=admin

# Feature Flags
ENABLE_DEBUG=true
ENABLE_SWAGGER=true
ENABLE_METRICS=true 