# Orchestra AI System Environment Variables

# API Keys
OPENROUTER_API_KEY=your-openrouter-api-key
API_KEY=your-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GEMINI_API_KEY=your-gemini-api-key

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=orchestra
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_URL=postgresql://postgres:your-postgres-password@localhost:5432/orchestra
DATABASE_URL=postgresql://postgres:your-postgres-password@localhost:5432/orchestra

# Weaviate Configuration
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_GRPC_PORT=50051
WEAVIATE_API_KEY=your-weaviate-api-key
WEAVIATE_URL=http://localhost:8080
WEAVIATE_ENDPOINT=http://localhost:8080

# Redis/Dragonfly Configuration
REDIS_URL=redis://localhost:6379
DRAGONFLY_URI=redis://localhost:6379

# API Configuration
API_URL=http://localhost:8080
API_HOST=0.0.0.0
API_PORT=8080

# MCP Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_SERVER_URL=http://localhost:8000
MCP_ORCHESTRATOR_PORT=8002
MCP_MEMORY_PORT=8003
MCP_WEAVIATE_DIRECT_PORT=8001
MCP_DEPLOYMENT_PORT=8005
MCP_TOOLS_PORT=8006

# MCP Storage Configuration
MCP_STORAGE_TYPE=postgres
MCP_STORAGE_CONNECTION_STRING=postgresql://postgres:your-postgres-password@localhost:5432/orchestra
MCP_STORAGE_MAX_ENTRIES=10000
MCP_STORAGE_TTL_SECONDS=86400

# Monitoring Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_URL=http://localhost:9090
GRAFANA_PORT=3000
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key
METRICS_PORT=9091

# Logging Configuration
MCP_LOG_LEVEL=INFO
MCP_DEBUG=false
LITELLM_VERBOSE=false

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=3600
OPTIMIZE_PERFORMANCE=true
CPU_LIMIT=4
MEMORY_LIMIT=8192

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_MAX_RETRY_TIMEOUT=300

# Deployment Configuration
VULTR_API_KEY=your-vultr-api-key
VULTR_PROJECT_ID=your-project-id
PULUMI_CONFIG_PASSPHRASE=your-pulumi-passphrase

# Optional Services
AIRBYTE_API_URL=http://localhost:8000
AIRBYTE_API_KEY=your-airbyte-api-key
AIRBYTE_WORKSPACE_ID=your-workspace-id

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_PASSWORD=your-smtp-password
MONITOR_FROM_EMAIL=monitor@example.com
MONITOR_TO_EMAIL=admin@example.com
ALERT_EMAIL=alerts@example.com

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Other Optional Services
SENTRY_DSN=https://your-sentry-dsn
MONGODB_URI=mongodb://localhost:27017/orchestra
GITHUB_TOKEN=your-github-token
