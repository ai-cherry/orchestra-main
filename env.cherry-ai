# Cherry AI Environment Configuration
# This extends the base env.example with Cherry AI specific settings

# ============================================
# Core Configuration
# ============================================
NODE_ENV=production
ENVIRONMENT=cherry-ai
API_URL=https://cherry-ai.me
API_PORT=8000
SERVER_HOST=150.136.94.139
LAMBDA_HOST=150.136.94.139

# ============================================
# Database Configuration
# ============================================
# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@${LAMBDA_HOST}:5432/cherry_ai
POSTGRES_HOST=${LAMBDA_HOST}
POSTGRES_PORT=5432
POSTGRES_DB=cherry_ai
POSTGRES_USER=postgres
# POSTGRES_PASSWORD set in GitHub secrets

# Redis (Caching and Real-time)
REDIS_HOST=${LAMBDA_HOST}
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD set in GitHub secrets
# REDIS_USER_API_KEY set in GitHub secrets
# REDIS_ACCOUNT_KEY set in GitHub secrets

# ============================================
# Vector Databases
# ============================================
# Weaviate (Knowledge Management)
WEAVIATE_URL=http://${LAMBDA_HOST}:8080
# WEAVIATE_API_KEY set in GitHub secrets

# Pinecone (AI Embeddings)
PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_API_KEY set in GitHub secrets

# ============================================
# Authentication & Security
# ============================================
# JWT_SECRET set in GitHub secrets
# ADMIN_API_KEY set in GitHub secrets
SESSION_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${JWT_SECRET}

# ============================================
# AI Personas Configuration
# ============================================
# Cherry - Personal Life
CHERRY_PERSONA_ID=1
CHERRY_SCHEMA=cherry
CHERRY_PINECONE_INDEX=cherry-personal
CHERRY_WEAVIATE_CLASS=PersonalKnowledge

# Sophia - Business
SOPHIA_PERSONA_ID=2
SOPHIA_SCHEMA=sophia
SOPHIA_PINECONE_INDEX=sophia-business
SOPHIA_WEAVIATE_CLASS=BusinessIntelligence

# Karen - Healthcare
KAREN_PERSONA_ID=3
KAREN_SCHEMA=karen
KAREN_PINECONE_INDEX=karen-healthcare
KAREN_WEAVIATE_CLASS=HealthcareRegulations

# ============================================
# Portkey Configuration (LLM Gateway)
# ============================================
# PORTKEY_API_KEY set in GitHub secrets
PORTKEY_BASE_URL=https://api.portkey.ai/v1

# Virtual Keys (from Portkey account)
PORTKEY_OPENAI_VIRTUAL_KEY=openai-api-key-345cc9
PORTKEY_ANTHROPIC_VIRTUAL_KEY=anthropic-api-k-6feca8
PORTKEY_GEMINI_VIRTUAL_KEY=gemini-api-key-1ea5a2
PORTKEY_PERPLEXITY_VIRTUAL_KEY=perplexity-api-015025

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_PERSONAS=true
ENABLE_SUPERVISOR_AGENTS=true
ENABLE_VOICE_SYNTHESIS=true
ENABLE_MFA=true
ENABLE_AI_COLLABORATION=true
ENABLE_ADVANCED_ANALYTICS=true

# ============================================
# Performance & Limits
# ============================================
MAX_CONCURRENT_USERS=1000
MAX_WEBSOCKET_CONNECTIONS=500
TASK_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600
SESSION_TIMEOUT_MINUTES=60

# ============================================
# Monitoring & Analytics
# ============================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ============================================
# Development Tools
# ============================================
# AI Collaboration Dashboard settings
AI_COLLAB_ENABLED=true
AI_COLLAB_PATH=/settings/developer-tools/collaboration
MANUS_WEBSOCKET_URL=ws://${LAMBDA_HOST}:8765/manus
CURSOR_WEBSOCKET_URL=ws://${LAMBDA_HOST}:8765/cursor

# ============================================
# Deployment Configuration
# ============================================
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_REGION=us-west
DEPLOYMENT_PROVIDER=lambda-labs
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=1
MAX_INSTANCES=10