{
  "name": "cursor-ai-zapier-mcp",
  "version": "1.0.0",
  "description": "Cursor AI Development Assistant - Zapier MCP Server for autonomous workflow automation",
  "main": "server.js",
  "bin": {
    "zapier-mcp": "cli.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "setup": "node setup.js",
    "deploy": "pm2 start server.js --name 'zapier-mcp'",
    "stop": "pm2 stop zapier-mcp",
    "restart": "pm2 restart zapier-mcp",
    "logs": "pm2 logs zapier-mcp",
    "health": "curl -s http://localhost:8001/health | jq",
    "auth-test": "node test-auth.js"
  },
  "keywords": [
    "zapier",
    "mcp",
    "cursor",
    "ai",
    "automation",
    "development",
    "workflow",
    "code-generation",
    "deployment"
  ],
  "author": "Orchestra AI System",
  "license": "MIT",
  "homepage": "https://github.com/ai-cherry/orchestra-main",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-cherry/orchestra-main.git"
  },
  "bugs": {
    "url": "https://github.com/ai-cherry/orchestra-main/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.1",
    "pm2": "^5.3.0",
    "@types/node": "^20.10.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "directories": {
    "test": "tests"
  }
}
