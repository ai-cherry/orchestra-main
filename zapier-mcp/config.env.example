# 🔧 Cursor AI Zapier MCP Server Configuration
# Copy this file to .env and configure your values

# 🚀 Server Configuration
MCP_SERVER_PORT=8001
NODE_ENV=production
API_VERSION=v1

# 🔐 Authentication & Security
ZAPIER_API_KEY=your_zapier_api_key_here
CURSOR_WORKSPACE_ID=your_cursor_workspace_id_here
JWT_SECRET=your_jwt_secret_here_min_32_chars
API_SECRET_KEY=your_api_secret_key_here

# 🌐 CORS & Network
CORS_ORIGIN=https://zapier.com,https://platform.zapier.com,https://hooks.zapier.com
ALLOWED_IPS=127.0.0.1,::1
WEBHOOK_SECRET=your_webhook_secret_here

# 📊 Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BURST=20

# 📝 Logging
LOG_LEVEL=info
LOG_FILE=./logs/zapier-mcp.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 🗄️ Database (Optional - for session storage)
DATABASE_URL=postgresql://user:password@localhost:5432/zapier_mcp
REDIS_URL=redis://localhost:6379

# 🔧 External Services
GITHUB_TOKEN=your_github_token_here
VERCEL_TOKEN=your_vercel_token_here
DOCKER_REGISTRY_URL=your_docker_registry_here

# 🎯 Orchestra AI Integration
ORCHESTRA_API_URL=http://localhost:8010
PERSONAS_API_URL=http://localhost:8000
ENABLE_AI_FEATURES=true

# 📈 Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# 🚨 Error Handling
SENTRY_DSN=your_sentry_dsn_here
ERROR_WEBHOOK_URL=your_error_webhook_url_here

# 🔄 Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# 🛡️ Security Headers
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
TRUST_PROXY=false

# 📦 Development
ENABLE_HOT_RELOAD=false
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false 