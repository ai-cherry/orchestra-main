# Lambda Labs-only environment configuration
export PULUMI_CONFIG_PASSPHRASE="orchestra-dev-123"
export PULUMI_SKIP_UPDATE_CHECK=true

# Auto-activate virtual environment
if [ -f "${PWD}/venv/bin/activate" ]; then
    source "${PWD}/venv/bin/activate"
fi

# Alias for pulumi to use our wrapper
alias pulumi="$PWD/scripts/pulumi_wrapper.sh"

# Lambda Labs configuration
export Lambda Labs_API_KEY="${Lambda Labs_API_KEY:-}"
export Lambda Labs_SERVER_IP="150.136.94.139"

# Local environment variables (no cloud providers)
export ENVIRONMENT="production"
export PROJECT_ROOT="${PWD}"
