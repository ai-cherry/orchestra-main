{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/web/dist/assets/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/web/dist/index.html"
    }
  ],
  "functions": {
    "api/main.py": {
      "runtime": "python3.11"
    }
  },
  "env": {
    "PYTHON_VERSION": "3.11"
  }
}

