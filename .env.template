# AI Orchestra GCP Configuration Template
# Copy this file to .env and fill in the values

# GCP Project Configuration
GCP_PROJECT_ID=cherry-ai-project
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Service Account Configuration - Simplified
# No need for complex authentication
GCP_SERVICE_ACCOUNT=default

# Cloud Run Configuration
CLOUD_RUN_SERVICE_NAME=orchestra-api
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_CPU=1
CLOUD_RUN_CONCURRENCY=80
CLOUD_RUN_TIMEOUT=300s
CLOUD_RUN_ALLOW_UNAUTHENTICATED=true  # Simplified: public access by default

# Artifact Registry Configuration
ARTIFACT_REGISTRY_REPO=orchestra-repo

# Cloud Workstation Configuration
WORKSTATION_CONFIG=cherry-workstation-config
WORKSTATION_NAME=cherry-workstation
WORKSTATION_MACHINE_TYPE=e2-standard-4

# Vertex AI Workbench Configuration
NOTEBOOK_NAME=cherry-notebook
NOTEBOOK_MACHINE_TYPE=n1-standard-4

# Repository Configuration
REPO_URL=https://github.com/ai-cherry/orchestra-main.git
# Simplified: No token needed for public repos

# Environment Configuration
DEPLOYMENT_ENVIRONMENT=development  # development, staging, production