# AI Orchestra GCP Migration Environment Configuration
# Copy this file to .env and fill in the values

# GCP Project Configuration
GCP_PROJECT_ID=cherry-ai-project
GCP_REGION=us-central1
ENVIRONMENT=dev

# Service Account Configuration
SERVICE_ACCOUNT=admin-api-sa@cherry-ai-project.iam.gserviceaccount.com

# Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=change-me-to-secure-password
DB_NAME=orchestra

# Resource Configuration
MACHINE_TYPE=n2d-standard-32
MIN_INSTANCES=1
MAX_INSTANCES=5
CONTAINER_CONCURRENCY=80
MEMORY=2Gi
CPU_LIMIT=4

# Monitoring
ALERT_EMAIL=admin@example.com

# Billing (optional)
BILLING_ACCOUNT_ID=
MONTHLY_BUDGET=1000