{
  "model_defaults": {
    "framework": "sklearn",
    "save_format": "joblib",
    "versioning": "semantic",
    "auto_register": true
  },
  "training_defaults": {
    "validation_split": 0.2,
    "random_state": 42,
    "early_stopping": true,
    "patience": 5
  },
  "serving_defaults": {
    "batch_size": 32,
    "max_latency_ms": 100,
    "cache_predictions": true,
    "cache_ttl_seconds": 300
  },
  "monitoring": {
    "log_predictions": true,
    "sample_rate": 0.1,
    "alert_thresholds": {
      "latency_p99": 200,
      "error_rate": 0.01,
      "drift_score": 0.15
    }
  }
}