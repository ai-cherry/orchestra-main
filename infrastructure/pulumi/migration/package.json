{
  "name": "@pulumi/migration-framework",
  "version": "1.0.0",
  "description": "Comprehensive Pulumi infrastructure migration framework with state management, deduplication, and rollback capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pulumi-migrate": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage .tsbuildinfo",
    "prepare": "npm run build",
    "migrate": "node dist/index.js",
    "migrate:preview": "pulumi preview",
    "migrate:up": "pulumi up --yes",
    "migrate:destroy": "pulumi destroy --yes",
    "docker:build": "docker build -t pulumi-migration:latest .",
    "docker:run": "docker run --rm -it pulumi-migration:latest",
    "start": "node dist/index.js"
  },
  "keywords": [
    "pulumi",
    "infrastructure",
    "migration",
    "iac",
    "cloud",
    "gcp",
    "automation",
    "state-management",
    "rollback",
    "deduplication"
  ],
  "author": "Pulumi Migration Framework",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/pulumi-migration.git"
  },
  "dependencies": {
    "@pulumi/pulumi": "^3.94.0",
    "@pulumi/gcp": "^7.0.0",
    "@types/node": "^20.10.0",
    "p-queue": "^7.4.1",
    "winston": "^3.11.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.3.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/yargs": "^17.0.32",
    "@types/cli-progress": "^3.11.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "Pulumi.yaml",
    "Pulumi.*.yaml"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}