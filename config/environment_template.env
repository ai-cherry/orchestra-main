# Orchestra AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================================================
# NOTION INTEGRATION CONFIGURATION
# ==============================================================================

# Core Notion API Configuration
NOTION_API_TOKEN=your_notion_integration_token_here
NOTION_WORKSPACE_ID=your_workspace_id_here  
NOTION_WORKSPACE_URL=https://www.notion.so/your-workspace-url
NOTION_ENVIRONMENT=development  # development, staging, production

# Notion Database IDs (get these from your Notion workspace URLs)
# Project Management Databases
NOTION_DB_EPIC_TRACKING=your_epic_tracking_database_id
NOTION_DB_TASK_MANAGEMENT=your_task_management_database_id
NOTION_DB_DEVELOPMENT_LOG=your_development_log_database_id

# AI Coding Databases  
NOTION_DB_CODING_RULES=your_coding_rules_database_id
NOTION_DB_MCP_CONNECTIONS=your_mcp_connections_database_id
NOTION_DB_CODE_REFLECTION=your_code_reflection_database_id
NOTION_DB_AI_TOOL_METRICS=your_ai_tool_metrics_database_id

# Persona Feature Databases
NOTION_DB_CHERRY_FEATURES=your_cherry_features_database_id
NOTION_DB_SOPHIA_FEATURES=your_sophia_features_database_id
NOTION_DB_KAREN_FEATURES=your_karen_features_database_id

# Operations Databases
NOTION_DB_PATRICK_INSTRUCTIONS=your_patrick_instructions_database_id
NOTION_DB_KNOWLEDGE_BASE=your_knowledge_base_database_id

# Performance & Rate Limiting
NOTION_RATE_LIMIT_RPS=3  # Requests per second
NOTION_RATE_LIMIT_BURST=10  # Burst limit

# Webhook Configuration (optional)
NOTION_WEBHOOK_SECRET=your_webhook_secret_here
NOTION_WEBHOOK_ENABLED=false

# Logging Configuration
NOTION_DEBUG=false
NOTION_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ==============================================================================
# OTHER API CONFIGURATIONS
# ==============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id_here

# OpenRouter Configuration (for cost optimization)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# GitHub Configuration
GITHUB_PAT=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token_here

# Lambda Labs Configuration
LAMBDA_LABS_API_KEY=your_lambda_labs_api_key_here

# Database Configuration
DATABASE_PASSWORD=your_postgres_password_here
REDIS_AUTH_TOKEN=your_redis_token_here
PINECONE_API_KEY=your_pinecone_api_key_here
WEAVIATE_API_KEY=your_weaviate_api_key_here

# ==============================================================================
# DEPLOYMENT CONFIGURATION
# ==============================================================================

# Environment Settings
ENVIRONMENT=development  # development, staging, production
DEBUG_MODE=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# CORS and API Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
API_BASE_URL=http://localhost:8000

# ==============================================================================
# INSTRUCTIONS FOR SETUP
# ==============================================================================

# 1. Copy this file to .env:
#    cp config/environment_template.env .env

# 2. Get your Notion API token:
#    - Go to https://www.notion.so/my-integrations
#    - Create new integration for your workspace
#    - Copy the "Internal Integration Token"

# 3. Get your workspace ID:
#    - Go to your Notion workspace
#    - Copy the workspace ID from the URL (long string after notion.so/)

# 4. Get database IDs:
#    - Go to each database in Notion
#    - Copy the database ID from the URL (32-character string before the question mark)

# 5. Set up other API keys as needed for your specific features

# 6. For production deployment:
#    - Set NOTION_ENVIRONMENT=production
#    - Set DEBUG_MODE=false
#    - Use strong, unique values for all secrets
#    - Consider using a secrets management service 