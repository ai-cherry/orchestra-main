{
  "domain": "payready",
  "rate_limiting": {
    "enabled": true,
    "rules": {
      "global": {
        "requests_per_minute": 50,
        "burst_size": 75,
        "cooldown_seconds": 120
      },
      "endpoints": {
        "/payready/api/*": {
          "requests_per_minute": 30,
          "burst_size": 45
        },
        "/payready/transactions/*": {
          "requests_per_minute": 20,
          "burst_size": 30,
          "strict": true
        },
        "/payready/webhooks/*": {
          "requests_per_minute": 15,
          "burst_size": 20
        },
        "/payready/health": {
          "requests_per_minute": 300,
          "burst_size": 300
        }
      },
      "user_tiers": {
        "basic": {
          "requests_per_minute": 10,
          "burst_size": 15
        },
        "business": {
          "requests_per_minute": 50,
          "burst_size": 75
        },
        "enterprise": {
          "requests_per_minute": 200,
          "burst_size": 300
        }
      }
    }
  },
  "circuit_breaker": {
    "enabled": true,
    "failure_threshold": 3,
    "recovery_timeout": 120,
    "success_threshold": 3
  },
  "retry_policy": {
    "max_retries": 2,
    "base_delay_ms": 200,
    "max_delay_ms": 10000,
    "exponential_base": 2
  },
  "security": {
    "require_api_key": true,
    "require_signature": true,
    "ip_whitelist_enabled": false
  }
}