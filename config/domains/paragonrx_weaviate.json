{
  "cluster_name": "paragonrx-karen-cluster",
  "domain": "ParagonRX",
  "persona": "Karen",
  "url": "http://weaviate-paragonrx:8080",
  "schema": {
    "classes": []
  },
  "collections": {
    "paragonrx_memories": {
      "description": "Vector store for Karen's memories",
      "vectorizer": "text2vec-openai",
      "properties": [
        {
          "name": "content",
          "dataType": [
            "text"
          ],
          "description": "Memory content"
        },
        {
          "name": "timestamp",
          "dataType": [
            "date"
          ],
          "description": "When the memory was created"
        },
        {
          "name": "importance",
          "dataType": [
            "number"
          ],
          "description": "Memory importance score"
        },
        {
          "name": "context",
          "dataType": [
            "text"
          ],
          "description": "Contextual information"
        }
      ]
    },
    "paragonrx_knowledge": {
      "description": "Knowledge base for ParagonRX domain",
      "vectorizer": "text2vec-openai",
      "properties": [
        {
          "name": "title",
          "dataType": [
            "text"
          ]
        },
        {
          "name": "content",
          "dataType": [
            "text"
          ]
        },
        {
          "name": "category",
          "dataType": [
            "text"
          ]
        },
        {
          "name": "source",
          "dataType": [
            "text"
          ]
        }
      ]
    }
  },
  "api_keys": {
    "openai": "${OPENAI_API_KEY}",
    "weaviate": "${WEAVIATE_API_KEY}"
  }
}