{
  "namespace": "personal",
  "connections": [
    {
      "name": "Personal_postgres_to_weaviate",
      "source": {
        "type": "postgres",
        "database": "orchestra_db",
        "schema": "personal_domain",
        "tables": [
          "personal_events",
          "personal_interactions",
          "personal_analytics"
        ]
      },
      "destination": {
        "type": "weaviate",
        "cluster_url": "https://personal-cherry-cluster.weaviate.network",
        "collection": "personal_knowledge"
      },
      "schedule": {
        "type": "cron",
        "expression": "0 */6 * * *"
      },
      "transformations": [
        {
          "type": "field_mapping",
          "mappings": {
            "event_data": "content",
            "event_type": "category",
            "created_at": "timestamp"
          }
        }
      ]
    },
    {
      "name": "Personal_api_to_postgres",
      "source": {
        "type": "http_api",
        "endpoint": "/api/personal/events",
        "method": "GET",
        "pagination": {
          "type": "offset",
          "limit": 1000
        }
      },
      "destination": {
        "type": "postgres",
        "database": "orchestra_db",
        "schema": "personal_domain",
        "table": "personal_raw_events"
      },
      "schedule": {
        "type": "interval",
        "minutes": 30
      }
    }
  ]
}