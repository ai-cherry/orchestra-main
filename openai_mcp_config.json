{
  "version": "1.0.0",
  "mcp_integration": {
    "enabled": true,
    "servers": {
      "tools": {
        "endpoint": "http://localhost:8006",
        "capabilities": [
          "tool_discovery",
          "tool_execution",
          "postgres_query",
          "cache_operations"
        ],
        "auth_required": false
      },
      "memory": {
        "endpoint": "http://localhost:8003",
        "capabilities": [
          "context_storage",
          "vector_search",
          "memory_management"
        ],
        "auth_required": false
      },
      "code-intelligence": {
        "endpoint": "http://localhost:8007",
        "capabilities": [
          "ast_analysis",
          "function_search",
          "complexity_analysis",
          "code_smells"
        ],
        "auth_required": false
      }
    },
    "routing": {
      "general_assistance": "tools",
      "context_retrieval": "memory",
      "code_help": "code-intelligence"
    }
  }
}