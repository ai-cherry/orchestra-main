# Orchestra AI - Environment Configuration
# Copy this file to .env and fill in your values

# ---------------------------------------------------------------------------
# Core Environment
ENVIRONMENT=development

# ---------------------------------------------------------------------------
# Databases & Storage
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_postgres_db_name
# Example: postgresql://user:password@host:port/dbname
POSTGRES_DSN=postgresql://user:password@host:5432/dbname

# Vector store (Weaviate)
# If running inside Docker Compose network you might use: http://weaviate:8080
WEAVIATE_URL=https://your-instance.weaviate.cloud
WEAVIATE_API_KEY=your_weaviate_api_key

# Optional in-memory cache (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
USE_REDIS=false
# Replica count used by docker-compose profile (0 disables Redis)
REDIS_REPLICAS=0

# ---------------------------------------------------------------------------
# Authentication / Security
JWT_SECRET=your_strong_jwt_secret

# ---------------------------------------------------------------------------
# LLM API Keys
OPENROUTER_API_KEY=your_openrouter_key
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
PORTKEY_API_KEY=your_portkey_key

# Portkey Virtual Keys (optional)
PORTKEY_VIRTUAL_KEY_OPENAI=your_virtual_key
PORTKEY_VIRTUAL_KEY_ANTHROPIC=your_virtual_key
PORTKEY_VIRTUAL_KEY_OPENROUTER=your_virtual_key

# ---------------------------------------------------------------------------
# Site Information
SITE_URL=http://localhost:8000
SITE_TITLE=Orchestra AI Development

# ---------------------------------------------------------------------------
# Infrastructure (Vultr)
# Pulumi/CI usually supplies these as environment variables rather than in .env
# VULTR_API_KEY and PULUMI_ACCESS_TOKEN are typically configured in CI secrets.
VULTR_SERVER_IP=
