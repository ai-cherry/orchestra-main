# Orchestra AI Environment Configuration Template
# Copy this to .env and update with your values
# DO NOT commit .env to version control!

# ============================================
# Core Configuration
# ============================================
NODE_ENV=development
ENVIRONMENT=unified
API_URL=http://localhost:3000
API_PORT=8000
SERVER_HOST=45.32.69.157

# ============================================
# Database Configuration - PostgreSQL + Weaviate
# ============================================
# PostgreSQL (Primary Database for relational data)
DATABASE_URL=postgresql://orchestra:your_secure_password@localhost:5432/orchestra
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=orchestra
POSTGRES_USER=orchestra
POSTGRES_PASSWORD=your_secure_password

# Weaviate (Vector Database for semantic/AI data)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-key

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your-jwt-secret-here-change-in-production
ADMIN_API_KEY=your-admin-api-key
API_KEY=your_api_key_here

# ============================================
# Portkey Configuration (LLM Gateway)
# ============================================
PORTKEY_API_KEY=your-portkey-api-key
PORTKEY_BASE_URL=https://api.portkey.ai/v1

# Available Virtual Keys (from your Portkey account):
# - gemini-api-key-1ea5a2    (Google Gemini)
# - perplexity-api-015025    (Perplexity)
# - deepseek-api-ke-e7859b   (DeepSeek)
# - xai-api-key-a760a5       (X.AI Grok)
# - openai-api-key-345cc9    (OpenAI GPT-4, DALL-E)
# - anthropic-api-k-6feca8   (Anthropic Claude)
# - together-ai-670469       (Together AI)
# - openrouter-api-15df95    (OpenRouter)

# Default virtual keys for specific services
PORTKEY_OPENAI_VIRTUAL_KEY=openai-api-key-345cc9
PORTKEY_ANTHROPIC_VIRTUAL_KEY=anthropic-api-k-6feca8
PORTKEY_GEMINI_VIRTUAL_KEY=gemini-api-key-1ea5a2
PORTKEY_PERPLEXITY_VIRTUAL_KEY=perplexity-api-015025

# ============================================
# Feature Flags
# ============================================
ENABLE_IMAGE_GEN=true
ENABLE_VIDEO_SYNTH=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_MULTIMODAL=true

# ============================================
# Optional AI Services (if not using Portkey)
# ============================================
# Only needed if bypassing Portkey for specific services
# OPENAI_API_KEY=your-direct-openai-key
# ANTHROPIC_API_KEY=your-direct-anthropic-key

# ============================================
# Media & Content Services
# ============================================
PEXELS_API_KEY=your-pexels-key-optional
ELEVENLABS_API_KEY=your-elevenlabs-key-optional

# ============================================
# Monitoring & Analytics
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-optional

# ============================================
# Cost Management
# ============================================
DAILY_COST_LIMIT_USD=100
COST_ALERT_THRESHOLD=0.8
MAX_DALLE_REQUESTS_PER_DAY=1000
MAX_GPT4_TOKENS_PER_DAY=1000000

# ============================================
# Caching & Performance
# ============================================
# Note: Caching is handled by PostgreSQL + Weaviate
# No separate cache service needed
CACHE_TTL_SECONDS=3600

# ============================================
# Persona Configuration
# ============================================
POSTGRES_SCHEMA_CHERRY=cherry
POSTGRES_SCHEMA_SOPHIA=sophia
POSTGRES_SCHEMA_KAREN=karen
