{
    "name": "Terraform Development",
    "build": {
        "dockerfile": "../Dockerfile.terraform",
        "context": ".."
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "hashicorp.terraform",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "redhat.vscode-yaml",
                "4ops.terraform"
            ],
            "settings": {
                "terraform.languageServer": {
                    "enabled": true,
                    "args": []
                }
            }
        }
    },
    "remoteUser": "root",
    "forwardPorts": [],
    "postCreateCommand": "terraform --version && tflint --version && terragrunt --version"
}
