# Development Environment Variables for AI Orchestra
# This file contains environment variables for local development

# Project Configuration
GCP_PROJECT_ID=cherry-ai-project
GCP_REGION=us-west4
ENVIRONMENT=development

# API Configuration
API_PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
POSTGRES_USER=orchestra
POSTGRES_PASSWORD=orchestra
POSTGRES_DB=orchestra
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Weaviate Configuration
WEAVIATE_HOST=weaviate
WEAVIATE_PORT=8080
WEAVIATE_QUERY_LIMIT=25

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=sk-dummy-key-for-development-only
ANTHROPIC_API_KEY=sk-ant-dummy-key-for-development-only

# Memory Configuration
SHORT_TERM_MEMORY_TTL=3600  # 1 hour in seconds
MID_TERM_MEMORY_TTL=86400   # 24 hours in seconds
VECTOR_DIMENSION=1536       # OpenAI embedding dimension

# Feature Flags
ENABLE_SEMANTIC_SEARCH=true
ENABLE_STREAMING=true
ENABLE_RATE_LIMITING=false
