{
  "version": "1.0.0",
  "mcp_servers": {
    "memory": {
      "endpoint": "http://localhost:8003",
      "capabilities": [
        "context_storage",
        "vector_search",
        "memory_management"
      ],
      "description": "Memory and context management with PostgreSQL + Weaviate",
      "priority": 1,
      "health_check": {
        "endpoint": "http://localhost:8003/health",
        "interval": 30,
        "timeout": 5,
        "retries": 3
      },
      "retry_config": {
        "max_retries": 3,
        "backoff_factor": 2,
        "max_backoff": 60
      }
    },
    "code-intelligence": {
      "endpoint": "http://localhost:8007",
      "capabilities": [
        "ast_analysis",
        "function_search",
        "complexity_analysis",
        "code_smells"
      ],
      "description": "Advanced code analysis and intelligence",
      "priority": 2,
      "health_check": {
        "endpoint": "http://localhost:8007/health",
        "interval": 30,
        "timeout": 5,
        "retries": 3
      },
      "retry_config": {
        "max_retries": 3,
        "backoff_factor": 2,
        "max_backoff": 60
      }
    },
    "git-intelligence": {
      "endpoint": "http://localhost:8008",
      "capabilities": [
        "git_history",
        "blame_analysis",
        "hotspot_detection",
        "contributor_stats"
      ],
      "description": "Git history and change analysis",
      "priority": 3,
      "health_check": {
        "endpoint": "http://localhost:8008/health",
        "interval": 30,
        "timeout": 5,
        "retries": 3
      },
      "retry_config": {
        "max_retries": 3,
        "backoff_factor": 2,
        "max_backoff": 60
      }
    },
    "tools": {
      "endpoint": "http://localhost:8006",
      "capabilities": [
        "tool_discovery",
        "tool_execution",
        "postgres_query",
        "cache_operations"
      ],
      "description": "Tool registry and execution with PostgreSQL/Redis/Weaviate tools",
      "priority": 2,
      "health_check": {
        "endpoint": "http://localhost:8006/health",
        "interval": 30,
        "timeout": 5,
        "retries": 3
      },
      "retry_config": {
        "max_retries": 3,
        "backoff_factor": 2,
        "max_backoff": 60
      }
    }
  },
  "routing": {
    "general_coding": "code-intelligence",
    "context_understanding": "memory",
    "change_analysis": "git-intelligence",
    "tool_usage": "tools"
  },
  "cache": {
    "ttl": 3600,
    "strategy": "lru"
  },
  "load_balancing": {
    "strategy": "round_robin",
    "health_check_interval": 30,
    "failover_timeout": 5
  },
  "circuit_breaker": {
    "failure_threshold": 5,
    "recovery_timeout": 60,
    "half_open_requests": 3
  }
}