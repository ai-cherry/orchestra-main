{
  "version": "2.0.0",
  "description": "Ultra-fast auto-approval for uninterrupted development flow - Performance/Quality priority",
  "globalSettings": {
    "enableAutoApproval": true,
    "requireExplicitApproval": false,
    "defaultApprove": true,
    "logAllDecisions": true,
    "performancePriority": true,
    "allowBacktracking": true
  },
  "philosophy": "Fast, powerful, accurate AI coding with human oversight via review, not interruption",
  "rules": [
    {
      "id": "universal_development",
      "condition": "mode in ['üíª Developer - Python 3.10+', 'üé® UI Designer', '‚öôÔ∏è Implementation', 'ü™≤ Debugger']",
      "approve": ["edit", "command", "browser", "mcp"],
      "description": "Auto-approve all development activities - optimize for speed and quality",
      "constraints": {
        "noOneOffScripts": true,
        "integrateWithExisting": true,
        "maintainPerformance": true
      }
    },
    {
      "id": "architecture_flow",
      "condition": "mode == 'üèó Architect'",
      "approve": ["read", "edit", "mcp", "command"],
      "description": "Auto-approve architecture changes - human can review afterward",
      "constraints": {
        "optimizeForPerformance": true,
        "designForScale": true,
        "prioritizeStability": true
      }
    },
    {
      "id": "orchestrator_autonomy",
      "condition": "mode == 'ü™É Orchestrator'",
      "approve": ["read", "edit", "command", "browser", "mcp"],
      "description": "Full autonomy for workflow orchestration - maximum coordination power"
    },
    {
      "id": "quality_automation",
      "condition": "mode == '‚úÖ Quality Control'",
      "approve": ["read", "edit", "command", "mcp"],
      "description": "Auto-approve quality improvements - continuous enhancement focus"
    },
    {
      "id": "research_freedom",
      "condition": "mode in ['üîç Researcher', 'üìä Analytics', 'üß† Strategist']",
      "approve": ["read", "edit", "browser", "mcp"],
      "description": "Full research and analysis capabilities"
    },
    {
      "id": "all_file_types",
      "condition": "fileExt in ['.py', '.ts', '.tsx', '.js', '.jsx', '.css', '.scss', '.json', '.yaml', '.yml', '.md', '.sql', '.toml']",
      "approve": ["edit", "command"],
      "description": "Auto-approve all standard development file types"
    },
    {
      "id": "test_and_docs",
      "condition": "fileName contains 'test' || fileName contains 'spec' || fileExt in ['.md', '.rst', '.txt']",
      "approve": ["edit", "command"],
      "description": "Auto-approve tests and meaningful documentation",
      "constraints": {
        "focusOnAICoders": true,
        "noTrivialDocs": true
      }
    },
    {
      "id": "mcp_integration_always",
      "condition": "taskContains('mcp') || taskContains('server') || taskContains('integration')",
      "approve": ["edit", "command", "mcp"],
      "description": "Always approve MCP integration work - essential for AI coordination"
    },
    {
      "id": "performance_optimization",
      "condition": "taskContains('performance') || taskContains('optimize') || taskContains('speed')",
      "approve": ["edit", "command", "mcp"],
      "description": "Auto-approve all performance optimization work",
      "priority": "highest"
    }
  ],
  "restrictions": {
    "preventOneOffScripts": {
      "enabled": true,
      "blockPatterns": ["temp_*.py", "quick_*.py", "test_*.py", "script_*.py"],
      "requireIntegration": true,
      "suggestAlternatives": true
    },
    "documentationStandards": {
      "aiCoderFocused": true,
      "blockTrivialDocs": ["README.md", "CHANGELOG.md", "TODO.md"],
      "requireMeaningful": true,
      "updateOngoing": true
    },
    "mcpRequirement": {
      "enforceUsage": true,
      "autoUpdate": true,
      "integrateInModes": true
    }
  },
  "performanceSettings": {
    "prioritizeSpeed": true,
    "optimizeForQuality": true,
    "maintainStability": true,
    "budgetSecondary": true,
    "securityReasonable": true
  },
  "auditSettings": {
    "logPath": ".roo/logs/flow.log",
    "enableBacktracking": true,
    "summaryAfterAction": true,
    "humanReviewCapable": true,
    "retentionDays": 7
  }
} 