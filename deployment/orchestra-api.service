[Unit]
Description=Orchestra AI API Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/orchestra
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
Environment="PULUMI_CONFIG_PASSPHRASE=orchestra-dev-123"
Environment="PYTHONPATH=/opt/orchestra"
ExecStart=/usr/bin/python3 -m uvicorn core.api.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
