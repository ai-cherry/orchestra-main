{
  "mcp-servers": {
    "memory": {
      "command": "python",
      "args": ["mcp_server/servers/memory_server.py"],
      "env": {
        "DATABASE_URL": "postgresql://postgres:your_password@localhost:5432/orchestra",
        "WEAVIATE_URL": "http://localhost:8082",
        "WEAVIATE_API_KEY": "your-weaviate-key"
      }
    },
    "orchestrator": {
      "command": "python",
      "args": ["mcp_server/servers/orchestrator_server.py"],
      "env": {
        "DATABASE_URL": "postgresql://postgres:your_password@localhost:5432/orchestra"
      }
    },
    "tools": {
      "command": "python",
      "args": ["mcp_server/servers/tools_server.py"],
      "env": {
        "PORTKEY_API_KEY": "your-portkey-key"
      }
    },
    "weaviate": {
      "command": "python",
      "args": ["mcp_server/servers/weaviate_server.py"],
      "env": {
        "WEAVIATE_URL": "http://localhost:8082",
        "WEAVIATE_API_KEY": "your-weaviate-key"
      }
    },
    "postgres": {
      "command": "python",
      "args": ["mcp_server/servers/postgres_server.py"],
      "env": {
        "DATABASE_URL": "postgresql://postgres:your_password@localhost:5432/orchestra"
      }
    }
  }
}
