FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements-llm-test.txt .
RUN pip install --no-cache-dir -r requirements-llm-test.txt

# Copy the application code
COPY core/orchestrator/src/services/llm /app/services/llm
COPY tools/llm_test_server /app/llm_test_server

# Create monitoring directory
RUN mkdir -p /app/monitoring/metrics

# Set environment variables
ENV PYTHONPATH=/app

# Expose the port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8001/health || exit 1

# Run the server
CMD ["python", "-m", "llm_test_server.main"]