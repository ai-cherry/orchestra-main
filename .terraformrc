# Terraform CLI Configuration
# This file configures global Terraform behavior

# Configure provider plugin caching to avoid re-downloading plugins
plugin_cache_dir = "$HOME/.terraform.d/plugin-cache"

# Disable telemetry
disable_checkpoint = true

# Increase parallelism for faster operations
parallelism = 10

# Configure persistent credential helpers
credentials_helper "gcloud" {
  args = []
}
