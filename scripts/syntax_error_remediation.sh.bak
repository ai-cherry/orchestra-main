        if ! python3 -m json.tool "$file" >/dev/null 2>&1; then
            log_error "JSON syntax error in: $file"
            JSON_ERROR_FILES+=("$file")
            ((JSON_ERRORS++))
            
            # Get detailed error
            python3 -m json.tool "$file" 2>&1 | head -3 >> "$LOG_FILE"
        fi
        
