        2>/dev/null || true)
    
    if [ -z "$json_files" ]; then
        log_info "No JSON files found"
        return 0
    fi
    
    while IFS= read -r file; do
        [ -z "$file" ] && continue
        ((TOTAL_FILES++))
        
        log_info "Checking: $file"
        
