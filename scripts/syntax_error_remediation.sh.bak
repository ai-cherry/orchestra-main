    log_header "ðŸ“„ Checking JSON Syntax"
    
    local json_files
    json_files=$(find . -name "*.json" \
        -not -path "./.git/*" \
        -not -path "./node_modules/*" \
        -not -path "./venv/*" \
        -not -path "./syntax_backup_*/*" \
