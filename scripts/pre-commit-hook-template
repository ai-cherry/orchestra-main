#!/bin/bash
# Gemini-enhanced secret protection

RED='\033[0;31m'
NC='\033[0m'

check_secrets() {
  # Detect potential secret leaks
  if git diff --cached --name-only | grep -E '\.key$|gsa-key\.json$'; then
    echo -e "${RED}Error: Secret files detected in commit!${NC}"
    exit 1
  fi

  # Check for sensitive patterns
  if git diff --cached | grep -E 'AIza[0-9A-Za-z-_]{35}'; then
    echo -e "${RED}Error: Potential API key detected in code${NC}"
    exit 1
  fi
}

# Execute checks
check_secrets
